@model List<CustomerService>
@{
    ViewData["Title"] = "CompletedOrders";
}

<div class="card border-primary mb-3">
    <div class="card-header">Completed Orders</div>
    <div class="card-body">
        <div class="card-text">

            <table class="table table-hover table-bordered table-striped table-responsive-md">
                <thead>
                    <tr class="table-danger">
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Make</th>
                        <th scope="col">Model</th>
                        <th scope="col">Year</th>
                        <th scope="col">Total Cost</th>
                        <th scope="col">Total Paid</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Status</th>
                    
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customerService in Model)
                    {
                        <tr>
                            <td>@customerService.Customer.FirstName</td>
                            <td>@customerService.Customer.LastName</td>
                            <td>@customerService.Customer.Email</td>
                            <td>@customerService.Customer.Phone</td>
                            <td>@customerService.Customer.Make</td>
                            <td>@customerService.Customer.Model</td>
                            <td>@customerService.Customer.Year</td>
                            <td>@customerService.TotalCost</td>
                            <td>@customerService.TotalPaid</td>
                            <td>@(Math.Round(customerService.TotalCost, 2,MidpointRounding.AwayFromZero) - Math.Round(customerService.TotalPaid, 2,MidpointRounding.AwayFromZero))</td>
                            <td>@customerService.Status</td>
              
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



